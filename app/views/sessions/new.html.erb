    <div class="w-[95%] h-[100vh] flex items-center flex-col justify-center relative">
      <div class="sign_form w-[90%] md:w-[60%] lg:w-[40%] bg-[#1a1819] py-10 px-5 border-solid border-2 border-gray-800 rounded-lg">
   
        <h2 class="mt-1 text-center text-3xl font-bold text-white">
          Welcome Back!
        </h2>
        <%= form_with( scope: :session, url: signin_path, data:{turbo: false},local: true, class:"form_con flex flex-col") do |form| %>
          <div class="input-box flex flex-col mt-4">
            <%= form.label :username,class:"text-white font-semibold text-lg mb-3" %>
              <%= form.text_field :username,class:"bg-[#1c1c1c] p-3 outline-none border-solid border-2 border-gray-800 rounded-lg text-gray-200" %>
          </div>
          <div class="input-box flex flex-col mt-4">
            <%= form.label :password, class:"text-white font-semibold text-lg mb-3" %>
              <%= form.password_field :password, class:"bg-[#1c1c1c] p-3 outline-none border-solid border-2 border-gray-800 rounded-lg text-gray-200" %>
          </div>
    
          <div class="input-box flex flex-col mt-4">
              <%= form.submit "Sign In", class:"text-white text-lg bg-blue-700 hover:bg-blue-900 font-semibold pt-3 pb-3 rounded-lg ease-out duration-300 cursor-pointer"%>
            </div>
                <% end %>
    
                <div class="flex items-center mt-4">
                  <h4 class="text-white font-normal text-lg">Don't have an account yet?</h4>
                  <%=link_to "Sign Up" ,signup_path,class:"text-blue-600 pl-2 font-bold text-lg" %>
                </div>
    
      </div>
    </div>